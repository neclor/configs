root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space
tab_width = 2

[*.{html,js,ts}]
indent_size = 4
indent_style = space
tab_width = 4

[*.{css,scss}]
indent_size = 2
indent_style = space
tab_width = 2

[*.{xml,gradle,properties}]
indent_size = 2
indent_style = space
tab_width = 2

[*.java]
indent_size = 4
indent_style = tab
tab_width = 4
